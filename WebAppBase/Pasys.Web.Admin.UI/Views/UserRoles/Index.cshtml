@model Pasys.Web.Admin.UI.Models.UserRolesViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-group">
    <div class="col-md-5">
        <table>
            <thead>
                <tr>
                    <th>选择</th>
                    <th>角色名</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Roles.Count(); i++)
                {
                    <tr id="@Model.Roles.ToList()[i].Id">
                        <td>
                            <input id="@Model.Roles.ToList()[i].Id" type="checkbox" />
                        </td>
                        <td>
                            @Model.Roles.ToList()[i].Name
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="col-md-2">
        <div><button id="btnAdd" type="button">➡</button></div>
        <div><button id="btnDelete" type="button">⇦</button></div>
    </div>
    <div class="col-md-5">
        <table>
            <thead>
                <tr>
                    <th>选择</th>
                    <th>角色名</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.UserRoles.Count(); i++)
                {
                    <tr id="@Model.UserRoles.ToList()[i].Id">
                        <td>
                            <input id="@Model.UserRoles.ToList()[i].Id" type="checkbox" />
                        </td>
                        <td>
                            @Model.UserRoles.ToList()[i].Name
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



